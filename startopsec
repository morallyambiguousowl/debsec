#System Upgrades
apt-get update
apt-get upgrade -s
apt-get upgrade
apt-get clean
apt-get autoremove

#Start vpn
pvpn -f

#Start proxy
/etc/init.d/privoxy start

#Set apparmor profiles to enforce
aa-enforce /etc/apparmor.d/*

#Verify firewall is on
ufw enable

#Clear bash history
history -c
history -w
shred -u ~/.bash_history && touch ~/.bash_history

#Enable ARP poisoning protection
sudo systemctl enable arpon
