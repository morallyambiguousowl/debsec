#Change Mac address
#macchanger -r <youradapter> -- Preferred option is set to automatically change on every boot --

#System Upgrades
apt-get update
apt-get upgrade -s
apt-get upgrade
apt-get clean
apt-get autoremove

#Start vpn
pvpn -f

#Start proxy
/etc/init.d/privoxy start

#Set apparmor profiles to enforce
aa-enforce /etc/apparmor.d/*

#Verify firewall is on
ufw enable

#Clear bash history
history -c
history -w
shred -u ~/.bash_history && touch ~/.bash_history

#Enable ARP poisoning protection
sudo systemctl enable arpon

echo -e -n "$BLUE[$GREEN*$BLUE] killing dangerous applications\n"
sudo killall -q chrome dropbox iceweasel skype icedove thunderbird firefox firefox-esr$
echo -e -n "$BLUE[$GREEN*$BLUE] Dangerous applications killed\n"

echo -e -n "$BLUE[$GREEN*$BLUE] cleaning some dangerous cache elements\n"
bleachbit -c adobe_reader.cache chromium.cache chromium.current_session chromium.histo$
echo -e -n "$BLUE[$GREEN*$BLUE] Cache cleaned\n"

mv /etc/resolv.conf /etc/resolv.conf.bak
echo -e 'nameserver 127.0.0.1\nnameserver 139.99.96.146\nnameserver 37.59.40.15\nnames$
echo -e " $GREEN*$BLUE Modified resolv.conf to use Tor and ParrotDNS/OpenNIC\n"
